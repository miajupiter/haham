{
  "applicationEngine": "react",
  "build": {
      "commands": [
          {
              "command": "build-theme",
              "options": {
                  "inputFile": "themes/metadata.base.json",
                  "outputFile": "src/assets/styles/theme.base.css"
              }
          },
          {
              "command": "build-theme",
              "options": {
                  "inputFile": "themes/metadata.additional.json",
                  "outputFile": "src/assets/styles/theme.additional.css"
              }
          },
          {
              "command": "export-theme-vars",
              "options": {
                  "inputFile": "themes/metadata.base.json",
                  "outputFile": "src/assets/styles/variables.base.scss"
              }
          },
          {
              "command": "export-theme-vars",
              "options": {
                  "inputFile": "themes/metadata.additional.json",
                  "outputFile": "src/assets/styles/variables.additional.scss"
              }
          }
      ]
  }
}
